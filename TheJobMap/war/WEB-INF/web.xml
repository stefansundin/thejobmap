<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->

<servlet>
  <servlet-name>markerServlet</servlet-name>
  <servlet-class>com.appspot.thejobmap.server.MarkerServiceImpl</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>markerServlet</servlet-name>
  <url-pattern>/thejobmap/marker</url-pattern>
</servlet-mapping>
  
<servlet>
  <servlet-name>openIDServlet</servlet-name>
  <servlet-class>com.appspot.thejobmap.server.OpenIDServiceImpl</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>openIDServlet</servlet-name>
  <url-pattern>/thejobmap/openid</url-pattern>
</servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>TheJobMap.html</welcome-file>
  </welcome-file-list>

</web-app>
